<div id="create-new-user-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    <i class="fa fa-fw fa-user"></i>
                    Create New User
                </h4>
            </div>
            <div class="modal-body">
                <div id="create-new-user-errors"></div>
                <form id="new-user-form">
                    <div class="form-group">
                        <label for="new-user-name">User Name</label>
                        <input type="text" class="form-control" id="new-user-name" placeholder="User Name">
                    </div>
                    <div class="form-group">
                        <label for="new-user-password">Password</label>
                        <input type="password" class="form-control" id="new-user-password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="new-user-confirm">Confirm Password</label>
                        <input type="password" class="form-control" id="new-user-confirm" placeholder="Confirm Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input id="new-user-is-admin" type="checkbox">
                            Admin
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
                <button id="create-new-user" type="button" class="btn btn-primary">
                    <i class="fa fa-fw fa-plus"></i>
                    Create User
                </button>
            </div><!-- /.model-footer -->
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
